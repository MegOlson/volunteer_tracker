<% if @projects.any?() %>
  <h1>Projects:</h1>

  <ul>
    <% @projects.each() do |project| %>
      <li><a href="/projects/<%= project.id() %>"><%= project.title() %></a></li>
    <% end %>
  </ul>

  <% else %>
  <div class="well">
    <h3><center>There are no current volunteer projects.</center></h3>
  </div>
<% end %>

<a href="/"><button class="btn">Return Home</button></a>
